@model List<WebShop.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Продукты</h2>

<div>
    @Html.ActionLink("Додати продукт", "Create", "Product");
    <br />
    <table border="1">
        <tr>
            <td>Name</td>
            <td>Price</td>
        </tr>
        @foreach (var p in Model)
        {
        <tr>
            <td>@p.Name </td>
            <td>@p.Price ₴ </td>
            <td>@Html.ActionLink("X", "Delete", new {name = p.Name }) </td>
        </tr>
        }
    </table>
    <br />
</div>